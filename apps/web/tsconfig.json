{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "types": ["vite/client", "bun-types"],
    "noEmit": true,
    "baseUrl": "./src",
    "paths": {
      "@apps/api": ["../../api/src/index.ts"],
      "@commons": ["../../../packages/commons/src/index.ts"],
      "app": ["../../api/src/app.ts"],
      "db": ["../../api/src/db/index.ts"],
      "db/*": ["../../api/src/db/*"],
      "logger": ["../../api/src/logger.ts"],
      "settings": ["../settings.ts"],
      "models/*": ["../../api/src/models/*"],
      "utils/*": ["../../api/src/utils/*"]
    }
  },
  "include": ["src", "vite.config.ts"]
}

{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": false,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "trailingComma": "all",
  "endOfLine": "lf",
  "ignorePatterns": ["node_modules/**", "**/dist/**", "**/build/**", "coverage/**"],
  "experimentalSortImports": {
    "newlinesBetween": false
  },
  "experimentalTailwindcss": {}
}

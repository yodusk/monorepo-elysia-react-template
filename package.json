{
  "name": "monorepo-elysia-react-template",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "bun --cwd apps/web dev",
    "dev:api": "bun --cwd apps/api dev",
    "format": "bunx oxfmt .",
    "format:check": "bunx oxfmt --check .",
    "lint": "bunx oxlint --type-aware --tsconfig tsconfig.base.json .",
    "lint:fix": "bunx oxlint --type-aware --fix --tsconfig tsconfig.base.json .",
    "lint:fix:suggestions": "bunx oxlint --type-aware --fix --fix-suggestions --tsconfig tsconfig.base.json .",
    "typecheck": "bun --cwd packages/commons typecheck && bun --cwd packages/migrations typecheck && bun --cwd apps/api typecheck && bun --cwd apps/web typecheck",
    "test": "bun --cwd apps/api test",
    "prepare": "husky",
    "db:migrate": "bun --env-file apps/api/.env --cwd packages/migrations run migrate",
    "db:generate": "cd apps/api && bunx kysely-codegen"
  },
  "devDependencies": {
    "bun-types": "latest",
    "eslint-plugin-perfectionist": "^5.6.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "latest",
    "oxlint": "latest",
    "oxlint-tsgolint": "^0.15.0",
    "pino-pretty": "^13.1.3",
    "typescript": "latest"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "bunx oxfmt",
      "bunx oxlint --type-aware --tsconfig tsconfig.base.json"
    ],
    "*.{json,md,css,html}": [
      "bunx oxfmt"
    ]
  }
}
